			private function ConsultarPersonas(e:Event):void {
				try
				{
					var abmUsuariosDTO_consulta:ABMUsuariosDTO_consulta = new ABMUsuariosDTO_consulta (); //20160805 (txtIdUsuario.text);
					msPM.sendConsultaRequestMSG(Messages.USUARIOS_CONSULTA_MESSAGE,abmUsuariosDTO_consulta);
				} 
				catch(error:Error) 
				{
					trace(error.message);
				}
				
			}
			
			
			
			private function SaveTheDay(e:Event):void {
				try
				{
					showAlert("Pedidos Realizados y Pendientes del día han quedado almacenados en la base de datos", "PEDIDOS DEL DIA GRABADOS!");
					
				} 
				catch(error:Error) 
				{
					trace(error.message);
				} 
			}
			
